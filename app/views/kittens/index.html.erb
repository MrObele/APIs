
<div class="row">
  <div class="col-md-8 col-md-offset-2">
        <h1>Kittens</h1>
     <div class = "table-responsive">
       <table class="table table-striped table-hover">
           <thead>
               <tr>
                   <th>Name</th>
                   <th>Age</th>
                   <th>Cuteness</th>
                   <th>Softness</th>
                   <th>Action</th>
               </tr>
           </thead>
           <tbody>
                <% if @kittens.any? %>
                   <% @kittens.each do |kitten|%>
                   <tr>
                       <td><%= kitten.name %></td>
                       <td><%= kitten.age %></td>
                       <td><%= kitten.cuteness %></td>
                       <td><%= kitten.softness %></td>
                       <td><%= link_to 'Delete', delete_kitten_path(id: kitten.id), method: :delete, data: {confirm: "Are you sure you want to delete this kitten?"} %><i class="fas fa-trash-alt"></i></td>
                   </tr>
                   <% end %>
                   <%  else %>
                   <p>No  Kitten available</p>
                <% end%>
           </tbody>
       </table>
     </div>
  </div>
</div>

